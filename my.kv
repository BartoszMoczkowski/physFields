#:kivy 1.0.9
<Menu>:
    id : Menu
    orientation: 'horizontal'
    spacing : 10
    BoxLayout:
        size_hint : (0.3,1)
        orientation: 'vertical'

        Label:
            text : 'space'
        
        Label:
            text : 'space'

        AnchorLayout:
            orientation: 'vertical'
            size_hint_y : None
            height : 250
            __safe_id: [element_select.__self__]

            Button:
                id : drop_button
                text: 'Elements : '
                anchor_y : 'top'
                height : 60
                size_hint : (1,None)
                on_release : element_select.open(drop_button)
            CustomDropdown:
                id : element_select
                anchor_y : 'bottom'

                on_select : 
                    drop_button.text = args[1]
                    Display.elements = 1 if args[1] == 'Rectangles' else 0

                Button:
                    text: 'Elements : Rectangles'
                    size_hint_y : None
                    height : 44
                    on_release : element_select.select('Rectangles')
                Button:
                    text: 'Elements : Triangles'
                    size_hint_y : None
                    height : 44
                    on_release : element_select.select('Triangles')
            
        Button:
            size_y : 60
            size_hint : (1,None)
            text: "Run"
            on_release : root.onApply()
    
    BoxLayout:
        orientation: 'vertical'
        size_hint : (0.7,1)
        DisplayCanvas:
            id : Display

            
            canvas.before:
                Color:
                    rgb:(1,1,1,1)
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint : (1,0.2)
            Button:
                text: ' op1'
                on_release : Display.button_set_state(1)

            Button:
                text: ' op2'
                on_release : Display.button_set_state(2)

            Button:
                text: ' op3'
                on_release : Display.button_set_state(3)





